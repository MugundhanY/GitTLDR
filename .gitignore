python-worker/.vscode/

# Python virtual environment folders (generic)
venv/
ENV/
env/
env.bak/
venv.bak/

# Byte-compiled / optimized / DLL files
*.py[cod]
*$py.class

# Distribution / packaging
python-worker/dist/
python-worker/build/
python-worker/*.egg-info/
python-worker/.eggs/

